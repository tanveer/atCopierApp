<div class="center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if user_signed_in? %>
        <% @makes.each do |make| %>
          <% if make.name == 'Konica Minolta' %>
            <div class="thumbnail konica">
              <div class="caption">
                <h3><%= make.name %></h3>
                <%= link_to 'Models', makes_show_path(make), class: "btn btn-default", style: "color: #326ada;" %>
              </div>
            </div>
          <% elsif make.name == "Kyocera" %>
            <div class="thumbnail kyocera">
              <div class="caption">
                <h3><%= make.name %></h3>
                <%= link_to 'Models', makes_show_path(make), class: "btn btn-default", style: "color: #e84c3d;" %>
              </div>
            </div>
          <% elsif make.name == "Panasonic" %>
