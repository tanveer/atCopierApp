                <h3><%= make.name %></h3>
                <%= link_to 'Models', makes_show_path(make), class: "btn btn-default", style: "color: #0073e5;" %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div> 
</div>