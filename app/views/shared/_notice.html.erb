<% if notice %>
  <div class="alert alert-notice alert-success alert-dismissible" role="alert">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
     <%= notice %>
  </div>
<% elsif alert %>
  <div class="alert alert-notice alert-danger alert-dismissible" role="alert">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= alert %></strong>
  </div>
<% end %>