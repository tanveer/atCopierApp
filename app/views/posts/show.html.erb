<div class="col-md-6 col-md-offset-3">
  <div class="data">
    <%= image_tag @post.user.avatar, size: "45x45", class: "img-circle" %>
    <h2><%= @post.title %></h2>
    <p><%= @post.content %><br /><small><%= time_ago_in_words(@post.created_at) %></smal></p>

    <%= link_to 'Back', posts_path,class: "btn btn-primary glyphicon" %>
    <% if current_user == @post.user %>
      <%= link_to 'Edit', edit_post_path(@post),class: "btn btn-info"%>
      <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-danger" %>
    <% end %>
  </div>
</div>